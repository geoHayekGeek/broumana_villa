RewriteEngine On

# üõë Skip rewrite for actual files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ‚úÖ Skip rewrite for backend handlers (e.g. /backend/contact-form-handler)
RewriteCond %{REQUEST_URI} ^/backend/
RewriteRule ^ - [L]

# ‚ûï Redirect requests without .php to actual .php files
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# üîÅ Optional: Redirect from .php URLs to clean versions (SEO/UX)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]
